pipeline {
    agent any

    environment {
        EC2_USER = "ubuntu"
        EC2_HOST = "3.14.102.55"
        SSH_KEY = "/var/jenkins_home/.ssh/id_rsa"
        APP_DIR = "/home/ubuntu/myapp"
    }

    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', credentialsId: 'github_cred', url: 'https://github.com/kuldeepsaindane/BiteBuddy.git'
            }
        }

        // stage('Install Dependencies') {
        //     steps {
        //         sh 'npm install'
        //     }
        // }

        // stage('Run Tests') {
        //     steps {
        //         sh 'npm test'
        //     }
        // }

        // stage('Build') {
        //     steps {
        //         sh 'npm run build'
        //     }
        // }

        stage('Deploy to AWS EC2') {
            steps {
                sshagent(['dev-ssh-credential-id']) {
                    sh """
                    ssh -o StrictHostKeyChecking=no -i ${SSH_KEY} ${EC2_USER}@${EC2_HOST} '
                    pwd
                    # sudo apt update &&
                    #sudo apt install -y nodejs npm &&
                    mkdir -p ${APP_DIR} &&
                    cd ${APP_DIR} &&
                    pwd 
                    ls -l

                    if [ -z "$(ls -A ${APP_DIR})" ]; then
                        echo "Directory is empty"
                    else
                        echo "Directory is not empty. Removing contents..."
                        rm -rf ${APP_DIR}/*
                    fi

                    
                    git clone https://github.com/kuldeepsaindane/BiteBuddy.git . &&
                    npm install &&
                    npm start                    
                    '
                    """
                }
            }
        }
    }
}
