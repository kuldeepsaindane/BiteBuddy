pipeline {
    agent any

    tools {
        nodejs 'NodeJS'  // This corresponds to the name you gave when configuring NodeJS in Jenkins
    }

    environment {
        //NODE_HOME = tool name: 'NodeJS', type: 'NodeJS'
        //PATH = "${NODE_HOME}/bin:${env.PATH}"
        HOME = "/home/ubuntu"
    }
 

    stages {
        stage('Clone Repository') {
            steps {
                // Get code from a GitHub repository
                git branch: 'main', url: 'https://github.com/kuldeepsaindane/BiteBuddy.git'
            }
        }
        
        stage('Install Dependencies') {
            steps {
                script {
                    sh 'npm install'
                }
            }
        }

        stage('Node Version') {
            steps {
                script {
                    // Check Node.js and npm versions
                    sh 'node -v'
                    sh 'npm -v'
                }
            }
        }

        stage('Run Test') {
            steps {
                script {
                    sh 'npm test'
                }
            }
        }
        stage('Build Project') {
            steps {
                script {
                    sh 'npm run build'
                }
                
            }
        }

        stage('Deploy Project') {
            steps {
                script {
                    sh 'npm start'
                }
            }
        }

    }
}


